{
  "version": "11.0.6",
  "private": true,
  "packageManager": "yarn@3.5.1",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=18"
  },
  "type": "module",
  "scripts": {
    "build": "run-s clean build:ide pretsup build:tsup release:finalize",
    "build:ide": "echo 'tsc -b' && tsc -b",
    "build:tsup": "lerna exec --stream --parallel -- yarn build",
    "pretsup": "echo 'removing js' && node ./scripts/pre-tsup.js",
    "clean": "echo 'cleaning' && tsc -b --clean && rm -rf packages/*/dist || true && rimraf .eslintcache || true",
    "clean:yarn": "rimraf yarn.lock node_modules .yarn/install-state.gz && yarn cache clean",
    "lint:fix": "eslint . --cache --ext .js,.ts,.tsx --fix",
    "test": "lerna exec --stream --parallel -- yarn test",
    "release": "yarn auto shipit",
    "release:finalize": "lerna exec --stream --parallel -- releaseFinalize"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,md,gql}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx,js}": [
      "eslint . --cache --ext .js,.ts,.tsx --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@alienfast/ci": "^8.2.7",
    "@alienfast/eslint-config": "^4.0.7",
    "@alienfast/logger": "workspace:*",
    "@alienfast/tsconfig": "^1.0.1",
    "@auto-it/all-contributors": "^10.46.0",
    "@auto-it/first-time-contributor": "^10.46.0",
    "@auto-it/released": "^10.46.0",
    "@lerna-lite/changed": "^2.4.2",
    "@lerna-lite/cli": "^2.4.2",
    "@lerna-lite/exec": "^2.4.2",
    "@lerna-lite/list": "^2.4.2",
    "@lerna-lite/publish": "^2.4.3",
    "@lerna-lite/version": "^2.4.2",
    "@rushstack/eslint-patch": "^1.3.2",
    "@types/babel__core": "^7",
    "@types/node": "^20.3.1",
    "@types/rimraf": "^3",
    "auto": "^10.46.0",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.2",
    "eslint-plugin-n": "^16.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-storybook": "^0.6.12",
    "eslint-plugin-unicorn": "^47.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "tsup": "^7.0.0",
    "typescript": "^5.1.3",
    "vite": "^4.3.9",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.32.2"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": "https://github.com/alienfast/logger",
  "author": "Kevin Ross <kevin.ross@alienfast.com>",
  "auto": {
    "plugins": [
      "npm",
      "all-contributors",
      "first-time-contributor",
      "released"
    ]
  }
}
