{
  "author": "Kevin Ross <kevin.ross@alienfast.com>",
  "auto": {
    "canary": {
      "target": "comment"
    },
    "plugins": [
      "npm",
      "all-contributors",
      "first-time-contributor",
      "released"
    ]
  },
  "devDependencies": {
    "@alienfast/biome-config": "^1.0.3",
    "@alienfast/logger": "workspace:*",
    "@alienfast/tsconfig": "^1.0.4",
    "@auto-it/all-contributors": "^11.3.0",
    "@auto-it/first-time-contributor": "^11.3.0",
    "@auto-it/released": "^11.3.0",
    "@biomejs/biome": "^2.2.5",
    "@lerna-lite/changed": "^4.9.0",
    "@lerna-lite/cli": "^4.9.0",
    "@lerna-lite/exec": "^4.9.0",
    "@lerna-lite/list": "^4.9.0",
    "@lerna-lite/publish": "^4.9.0",
    "@lerna-lite/version": "^4.9.0",
    "@types/babel__core": "^7",
    "@types/node": "^24.6.2",
    "@types/rimraf": "^4",
    "@vitejs/plugin-react": "^5.0.4",
    "auto": "^11.3.0",
    "execa": "^9.6.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "madge": "^8.0.0",
    "markdownlint-cli": "^0.45.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "tsdown": "^0.15.6",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite": "^7.1.8",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,json}": [
      "biome check --write --no-errors-on-unmatched --files-ignore-unknown=true",
      "git add"
    ],
    "*.md": [
      "markdownlint --fix",
      "git add"
    ]
  },
  "packageManager": "yarn@4.9.4",
  "private": true,
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": "https://github.com/alienfast/logger",
  "scripts": {
    "build": "run-s clean build-prep build-each",
    "build-each": "lerna exec --stream -- yarn build",
    "build-prep": "lerna exec --stream -- cp ../../.npmignore . && lerna exec --stream -- cp ../../LICENSE .",
    "check": "run-s check-types check-biome check-circular check-markdown",
    "check-biome": "biome check --write",
    "check-circular": "madge --circular --extensions ts,tsx ./packages/*/src --ts-config ./tsconfig.json",
    "check-markdown": "markdownlint '**/*.md' --fix",
    "check-types": "echo 'tsc -p tsconfig.json --pretty' && tsc -p tsconfig.json --pretty",
    "clean": "tsx ./scripts/clean.ts",
    "clean-yarn": "tsx ./scripts/clean-yarn.ts",
    "lint-fix": "yarn check-biome && yarn check-markdown",
    "release": "yarn auto shipit",
    "reset": "tsx ./scripts/reset.ts",
    "test": "run-s check-types test-each",
    "test-each": "lerna exec --stream --parallel -- yarn test"
  },
  "type": "module",
  "version": "11.0.6",
  "workspaces": [
    "packages/*"
  ]
}
