{
  "version": "11.0.6",
  "private": true,
  "packageManager": "yarn@3.2.4",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "run-s clean build:ide pretsup build:tsup",
    "build:ide": "echo 'tsc -b' && tsc -b",
    "build:tsup": "lerna exec --stream --parallel -- yarn build",
    "pretsup": "echo 'removing js' && node ./scripts/pre-tsup.js",
    "clean": "echo 'cleaning' && tsc -b --clean && rm -rf packages/*/dist || true && rimraf .eslintcache || true",
    "clean:yarn": "rimraf yarn.lock node_modules .yarn/install-state.gz && yarn cache clean",
    "lint": "eslint . --cache --ext .js,.ts,.tsx",
    "lint:fix": "eslint . --cache --ext .js,.ts,.tsx --fix",
    "test": "lerna exec --stream --parallel -- yarn test",
    "release": "yarn auto shipit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,md,gql}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx,js}": [
      "eslint . --cache --ext .js,.ts,.tsx --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@alienfast/config": "^8.1.9",
    "@alienfast/eslint-config": "^4.0.3",
    "@lerna-lite/changed": "^1.12.0",
    "@lerna-lite/cli": "^1.12.0",
    "@lerna-lite/exec": "^1.12.0",
    "@lerna-lite/list": "^1.12.0",
    "@rushstack/eslint-patch": "^1.2.0",
    "@types/babel__core": "^7",
    "@types/node": "^18.11.5",
    "@types/rimraf": "^3",
    "auto": "^10.37.6",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.3",
    "eslint-plugin-n": "^15.3.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "eslint-plugin-storybook": "^0.6.6",
    "eslint-plugin-unicorn": "^44.0.2",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "tsup": "^6.3.0",
    "typescript": "^4.8.4",
    "vite": "^3.1.8",
    "vite-tsconfig-paths": "^3.5.2",
    "vitest": "^0.24.3"
  },
  "resolutions": {
    "@alienfast/logger": "workspace:*",
    "@alienfast/logger-browser": "workspace:*",
    "@alienfast/logger-node": "workspace:*"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": "https://github.com/alienfast/logger",
  "author": "Kevin Ross <kevin.ross@alienfast.com>",
  "auto": {
    "plugins": [
      "npm"
    ]
  }
}
